@model CrudApp.Models.Thing

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Create Thing</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">Title</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-card-text"></i>
                            </span>
                            <input asp-for="Title" class="form-control" placeholder="Enter the title" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Description</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-pencil-square"></i>
                            </span>
                            <input asp-for="Description" class="form-control" placeholder="Enter the description" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-5">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}