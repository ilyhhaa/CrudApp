@model CrudApp.Models.Thing

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">
    <i class="fas fa-database" style="font-size: 40px; vertical-align: middle; margin-right: 10px;"></i>
    Delete Thing</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title text-center text-danger">Are you sure you want to delete this item?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger shadow-sm">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary shadow-sm">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>