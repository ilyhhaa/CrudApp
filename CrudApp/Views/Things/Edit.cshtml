@model CrudApp.Models.Thing

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">
    <i class="fas fa-database" style="font-size: 40px; vertical-align: middle; margin-right: 10px;"></i>
    Edit Thing
</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter the title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter the description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    </div>
</div>
    }
}